{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "lib": [
            "dom",
            "es2016",
            "es2017"
        ],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": false,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "pretty": true,

        "baseUrl": "./",
        "paths": {
            "client/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "out",
        "node_modules"
    ]
}
