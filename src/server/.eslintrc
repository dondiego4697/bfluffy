{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "quotes": ["error", "single", {"avoidEscape": true}],
        "max-len": [
            "error",
            {
                "code": 120,
                "tabWidth": 4,
                "ignoreUrls": true,
                "ignorePattern": "^import"
            }
        ]
    }
}
